@page "/showimages"

<PageTitle>Show Images</PageTitle>

<h1>Show Images</h1>

@if (imageSource is not null)
{
        <p>
            <img src="@imageSource" />
        </p>
}

@for (var i = 1; i <= 4; i++)
{
    var imageId = i;
        <button @onclick="() => ShowImage(imageId)">
            Image @imageId
        </button>
}

@code {
    private string? imageSource;

    private void ShowImage(int id)
    {
        imageSource = $"images/image_{id}.jpg";
    }
}